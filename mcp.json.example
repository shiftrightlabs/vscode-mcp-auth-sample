{
  "$schema": "https://json.schemastore.org/mcp.json",
  "mcpServers": {
    "mcp-auth-sample": {
      "command": "node",
      "args": ["dist/server.js"],
      "env": {
        "AZURE_CLIENT_ID": "your-azure-client-id",
        "AZURE_CLIENT_SECRET": "your-azure-client-secret",
        "AZURE_TENANT_ID": "your-azure-tenant-id",
        "PORT": "3000",
        "SERVER_URL": "http://localhost:3000"
      }
    }
  }
}
