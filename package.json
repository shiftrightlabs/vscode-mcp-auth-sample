{
  "name": "vscode-mcp-auth-sample",
  "version": "1.0.0",
  "description": "Reference implementation of an MCP server with OAuth 2.1 PKCE authentication for VS Code using Azure AD",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/shiftrightlabs/vscode-mcp-auth-sample.git"
  },
  "bugs": {
    "url": "https://github.com/shiftrightlabs/vscode-mcp-auth-sample/issues"
  },
  "homepage": "https://github.com/shiftrightlabs/vscode-mcp-auth-sample#readme",
  "scripts": {
